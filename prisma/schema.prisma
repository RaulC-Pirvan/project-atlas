/// Prisma Client generator
/// This produces the typed Prisma Client used throghout the app.
generator client {
  provider = "prisma-client-js"
}

/// Database connection
datasource db {
  provider = "postgresql"
}

/**
 * AppMeta stores small pieces of application metadata and runtime flags.
 *
 * Use cases:
 * - Feature flags (e.g. "maintenance_mode" = "true")
 * - Versioning / migrations markers
 * - Operational toggles ("resend_enabled" = "true")
 *
 * Notes:
 * - Keep values as strings; parse in code.
 * - This is NOT user-specific; it's app-global.
 */
model AppMeta {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  key         String    @unique
  value       String
}

/**
 * User represents an authenticated account in Project Atlas.
 *
 * Key invariants:
 * - `email` is unique per user.
 * - `passwordHash` is always stored (Credentials auth).
 * - `emailVerified` is null until verification completes.
 * - Soft deletion is supported via `deletedAt`.
 *
 * Notes:
 * - For NextAuth compatibility, keep `emailVerified` naming.
 */
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String
  passwordSetAt DateTime?
  displayName   String
  role          UserRole  @default(user)
  twoFactorEnabled Boolean @default(false)
  timezone      String    @default("UTC")
  weekStart     WeekStart @default(mon)
  keepCompletedAtBottom Boolean @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  accounts Account[]
  sessions Session[]
  habits Habit[]
  reminderSettings UserReminderSettings?
  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens PasswordResetToken[]
  twoFactor UserTwoFactor?
  recoveryCodes UserRecoveryCode[]
  stepUpChallenges AuthStepUpChallenge[]
  proEntitlement ProEntitlement?
  achievementUnlocks AchievementUnlock[]
  habitMilestoneUnlocks HabitMilestoneUnlock[]
  habitReminderSnoozes HabitReminderSnooze[]
  supportTickets SupportTicket[]

  @@index([email])
}

/**
 * Account is a NextAuth model used to link a user to an auth provider.
 *
 * In Project Atlas we primarily use Credentials, so this will be mostly empty,
 * BUT the Prisma Adapter expects this model to exist.
 *
 * If OAuth is added later, this becomes critical.
 */
model Account {
  id                  String @id @default(cuid())
  userId              String
  type                String
  provider            String
  providerAccountId   String
  refresh_token       String?
  access_token        String?
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String?
  session_state       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

/**
 * Session is a NextAuth model used for DB-backed sessions.
 *
 * Why DB sessions?
 * - Easy revocation (logout everywhere)
 * - Password change can invalidate sessions
 * - Good auditing and production control
 */
model Session {
  id            String @id @default(cuid())
  sessionToken  String @unique
  userId        String
  expires       DateTime
  lastActiveAt  DateTime @default(now())
  ipAddress     String?
  userAgent     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
  @@index([userId, lastActiveAt])
}

/**
 * VerificationToken is a NextAuth model used for email sign-in flows.
 *
 * Even if you're not using magic links right now, the Prisma Adapter
 * expects this model to exist.
 *
 * IMPORTANT:
 * This is NOT your account email-verification token.
 */
model VerificationToken {
  identifier  String
  token       String @unique
  expires     DateTime

  @@unique([identifier, token])
  @@index([expires])
}

/**
 * EmailVerificationToken is Project Atlas' account verification token.
 *
 * Flow:
 * - Generate a random token
 * - Store ONLY its hash in DB (`tokenHash`)
 * - Email the raw token in a link
 * - On verify: hash incoming token, compare, set user.emailVerified
 *
 * Security:
 * - Hashing avoids raw token exposure via logs/backups.
 * - Expiry prevents replay.
 */
model EmailVerificationToken {
  id          String @id @default(cuid())
  userId      String
  tokenHash   String @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

/**
 * PasswordResetToken supports "forgot password" flows.
 *
 * Flow:
 * - Generate random reset token
 * - Store hash only
 * - Email reset link
 * - On use: verify hash, rotate password hash, delete/reset tokens
 *
 * Note:
 * Even if "optional", this is cheap now and painful later. Keep it.
 */
model PasswordResetToken {
  id          String @id @default(cuid())
  userId      String
  tokenHash   String @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

/**
 * UserTwoFactor stores encrypted TOTP secret material and audit timestamps.
 *
 * Security:
 * - TOTP secrets are encrypted at rest.
 * - User.twoFactorEnabled remains the authoritative enrollment flag.
 */
model UserTwoFactor {
  id              String   @id @default(cuid())
  userId          String   @unique
  secretEncrypted String
  enabledAt       DateTime?
  lastVerifiedAt  DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

/**
 * UserRecoveryCode stores one-time recovery code hashes.
 *
 * Security:
 * - Only hashes are persisted; raw recovery codes are shown once to the user.
 */
model UserRecoveryCode {
  id         String    @id @default(cuid())
  userId     String
  codeHash   String
  consumedAt DateTime?
  revokedAt  DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, codeHash])
  @@index([userId, consumedAt, revokedAt])
}

/**
 * AuthStepUpChallenge tracks short-lived challenges for sensitive actions.
 */
model AuthStepUpChallenge {
  id                 String       @id @default(cuid())
  userId             String
  action             StepUpAction
  challengeTokenHash String       @unique
  expiresAt          DateTime
  consumedAt         DateTime?
  verifiedAt         DateTime?
  verifiedMethod     StepUpMethod?
  failedAttempts     Int          @default(0)
  lastAttemptAt      DateTime?
  lockedUntil        DateTime?
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, action, expiresAt])
  @@index([expiresAt])
}

/**
 * WeekStart controls the UI week layout preference.
 *
 * This does not change stored weekday encoding, which remains ISO (Mon=1..Sun=7).
 */
enum WeekStart {
  sun
  mon
}

/**
 * UserRole controls admin access to internal dashboards.
 *
 * Default is "user"; elevate to "admin" explicitly for trusted operators.
 */
enum UserRole {
  user
  admin
}

enum StepUpAction {
  sign_in
  account_email_change
  account_password_change
  account_delete
  admin_access
}

enum StepUpMethod {
  totp
  recovery_code
  password
}

enum SupportTicketCategory {
  billing
  account
  bug
  feature_request
}

enum SupportTicketStatus {
  open
  in_progress
  resolved
}

enum SupportAbuseSignalType {
  submission_attempt
  honeypot_hit
  rate_limited
  captcha_required
  captcha_failed
}

model SupportTicket {
  id                String                @id @default(cuid())
  userId            String?
  category          SupportTicketCategory
  status            SupportTicketStatus   @default(open)
  name              String
  email             String
  emailHash         String?
  subject           String
  message           String
  ipHash            String
  userAgent         String?
  inProgressAt      DateTime?
  resolvedAt        DateTime?
  retentionExpiresAt DateTime
  legalHoldUntil    DateTime?
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt

  user         User?               @relation(fields: [userId], references: [id], onDelete: SetNull)
  abuseSignals SupportAbuseSignal[]

  @@index([userId])
  @@index([status, createdAt])
  @@index([retentionExpiresAt])
  @@index([legalHoldUntil])
  @@index([ipHash, createdAt])
  @@index([emailHash, createdAt])
}

model SupportAbuseSignal {
  id         String                @id @default(cuid())
  ticketId   String?
  signalType SupportAbuseSignalType
  ipHash     String
  emailHash  String?
  userAgent  String?
  createdAt  DateTime              @default(now())

  ticket SupportTicket? @relation(fields: [ticketId], references: [id], onDelete: SetNull)

  @@index([ticketId])
  @@index([signalType, createdAt])
  @@index([ipHash, createdAt])
  @@index([emailHash, createdAt])
}

/**
 * ProEntitlement represents a one-time Pro purchase state for a user.
 *
 * Notes:
 * - One row per user (unique userId).
 * - Status is server-authoritative; client reads only.
 * - Source + externalId allow future store integrations.
 */
model ProEntitlement {
  id         String                @id @default(cuid())
  userId     String                @unique
  status     ProEntitlementStatus  @default(active)
  source     ProEntitlementSource  @default(manual)
  externalId String?
  restoredAt DateTime?
  createdAt  DateTime              @default(now())
  updatedAt  DateTime              @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
}

enum ProEntitlementStatus {
  active
  revoked
}

enum ProEntitlementSource {
  manual
  app_store
  play_store
  promo
}


/**
 * Habit captures a user's recurring intention.
 *
 * Habits are not tied to dates; schedules and completions handle time.
 */
model Habit {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  sortOrder   Int       @default(0)
  archivedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  schedule    HabitSchedule[]
  completions HabitCompletion[]
  reminders   HabitReminder[]
  milestoneUnlocks HabitMilestoneUnlock[]

  @@index([userId])
  @@index([userId, sortOrder])
}

/**
 * HabitSchedule maps a habit to active weekdays (ISO 1..7).
 */
model HabitSchedule {
  id        String   @id @default(cuid())
  habitId   String
  weekday   Int      @db.SmallInt
  createdAt DateTime @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, weekday])
  @@index([habitId])
}

/**
 * HabitCompletion marks a habit as completed on a specific date.
 *
 * The date is stored as a date-only value (UTC-normalized).
 */
model HabitCompletion {
  id          String   @id @default(cuid())
  habitId     String
  date        DateTime @db.Date
  completedAt DateTime @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
  @@index([habitId])
  @@index([date])
}

/**
 * UserReminderSettings stores per-user reminder preferences.
 *
 * Time values are minutes since midnight in the user's timezone (0-1439).
 */
model UserReminderSettings {
  id                     String   @id @default(cuid())
  userId                 String   @unique
  dailyDigestEnabled     Boolean  @default(true)
  dailyDigestTimeMinutes Int      @default(1200) @db.SmallInt
  quietHoursEnabled      Boolean  @default(false)
  quietHoursStartMinutes Int      @default(1320) @db.SmallInt
  quietHoursEndMinutes   Int      @default(420) @db.SmallInt
  snoozeDefaultMinutes   Int      @default(10) @db.SmallInt
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

/**
 * HabitReminder stores reminder times per habit.
 *
 * Reminder times are local minutes since midnight (0-1439).
 */
model HabitReminder {
  id          String   @id @default(cuid())
  habitId     String
  timeMinutes Int      @db.SmallInt
  enabled     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  habit   Habit                 @relation(fields: [habitId], references: [id], onDelete: Cascade)
  snoozes HabitReminderSnooze[]

  @@unique([habitId, timeMinutes])
  @@index([habitId])
}

/**
 * HabitReminderSnooze stores same-day snooze state per reminder.
 *
 * localDate is the user's local date (stored as date-only).
 */
model HabitReminderSnooze {
  id               String   @id @default(cuid())
  habitReminderId  String
  userId           String
  localDate        DateTime @db.Date
  snoozedUntil     DateTime
  totalMinutes     Int      @default(0) @db.SmallInt
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  reminder HabitReminder @relation(fields: [habitReminderId], references: [id], onDelete: Cascade)
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([habitReminderId, localDate])
  @@index([habitReminderId])
  @@index([userId])
  @@index([localDate])
}

model AchievementUnlock {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

model HabitMilestoneUnlock {
  id          String   @id @default(cuid())
  userId      String
  habitId     String
  milestoneId String
  unlockedAt  DateTime @default(now())
  createdAt   DateTime @default(now())

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([userId, habitId, milestoneId])
  @@index([userId])
  @@index([habitId])
}
